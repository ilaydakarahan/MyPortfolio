@model List<MyPortfolio.Models.TblContacts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br /><br />
<h3>İletişim Sayfası</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>NameSurname</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.NameSurname</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/contact/UpdateContact/@item.ContactId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Contact/AddContact" class="btn btn-outline-primary">Yeni İletişim Bilgisi Ekle</a>
