@model List<MyPortfolio.Models.TblTeams>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br /><br />
<h3>Ekip Arkadaşları</h3>

<table class="table table-bordered ">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Adı Soyadı</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Twitter</th>
        <th>Facebook</th>
        <th>Linkedln</th>
        <th>Instagram</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TeamId</td>
            <td>@item.ImageUrl</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.TwitterUrl</td>
            <td>@item.FacebookUrl</td>
            <td>@item.LinkedinUrl</td>
            <td>@item.InstagramUrl</td>
            <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>

<br />
<a href="/Team/AddTeam" class="btn btn-outline-primary">Yeni Ekip Arkadaşı Ekle</a>
